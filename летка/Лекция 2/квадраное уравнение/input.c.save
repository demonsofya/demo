#include <stdio.h>
#include <assert.h>
#include <ctype.h>
#include "constants.h"
#include "structs.h"

int scan(Coeffs *coeffs) {

    assert (coeffs.a != NULL);
    assert (coeffs.b != NULL);
    assert (coeffs.c != NULL);

    printf("The quadratic equation solver\n");
    printf("Enter three number: \n");

    int ReadenCount = 0;
    char NewSimbol;

    while (true) {

        ReadenCount = 0;
        ReadenCount = scanf("%lf %lf %lf", coeffs.a, coeffs.b, coeffs.c);
        NewSimbol = getchar();

        if (ReadenCount != 3 || !(NewSimbol == EOF || isspace(NewSimbol))) {

            scanf ("%*[^\n]");
            printf("Try again\n");
            continue;

        }

        return 1;
    }

    return 0;
}
